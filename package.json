{
	"name": "picals-backend",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"build": "nest build && npm run copy",
		"copy": "ts-node scripts/copy.ts",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/src/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"format": "prettier --write \"src/**/*.ts\"",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"script:seed": "node -r ./tsconfig-paths-bootstrap.js -r ts-node/register scripts/seed-data.ts",
		"script:upload": "node -r ./tsconfig-paths-bootstrap.js -r ts-node/register scripts/upload-dir.ts",
		"script:password": "node -r ./tsconfig-paths-bootstrap.js -r ts-node/register scripts/password.ts"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.750.0",
		"@keyv/redis": "^4.2.0",
		"@nestjs/cache-manager": "^3.0.0",
		"@nestjs/common": "^11.0.10",
		"@nestjs/config": "^4.0.0",
		"@nestjs/core": "^11.0.10",
		"@nestjs/jwt": "^11.0.0",
		"@nestjs/mapped-types": "*",
		"@nestjs/platform-express": "^11.0.10",
		"@nestjs/typeorm": "^11.0.0",
		"argon2": "^0.41.1",
		"axios": "^1.7.9",
		"cache-manager": "^6.4.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"dayjs": "^1.11.13",
		"multer": "1.4.5-lts.1",
		"mysql2": "^3.12.0",
		"nodemailer": "^6.10.0",
		"puppeteer": "^24.2.1",
		"redis": "^4.7.0",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2",
		"sharp": "^0.33.5",
		"typeorm": "^0.3.20"
	},
	"devDependencies": {
		"@eslint/js": "^9.21.0",
		"@nestjs/cli": "^11.0.4",
		"@nestjs/schematics": "^11.0.1",
		"@nestjs/testing": "^11.0.10",
		"@types/express": "^5.0.0",
		"@types/jest": "^29.5.14",
		"@types/multer": "^1.4.12",
		"@types/node": "^22.13.5",
		"@types/nodemailer": "^6.4.17",
		"@types/shelljs": "^0.8.15",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": "^8.24.1",
		"@typescript-eslint/parser": "^8.24.1",
		"eslint": "^9.21.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-prettier": "^5.2.3",
		"jest": "^29.7.0",
		"prettier": "^3.5.2",
		"shelljs": "^0.8.5",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.7.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@nestjs/core",
			"argon2"
		]
	}
}
